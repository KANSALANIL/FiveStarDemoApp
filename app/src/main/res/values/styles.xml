<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grayDark</item>
        <item name="colorPrimaryDark">@color/grayDark</item>
        <item name="colorAccent">@color/blue</item>

        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppThemeWhite" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <!--For Buttons-->
    <style name="ButtonLargeBlueStyle" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_52sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:background">@drawable/box_dark_brownish_red_corner_14</item>
        <item name="android:foreground">@drawable/ripple_box_corner_14</item>
    </style>

    <style name="ButtonMediumBlueStyle" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/urbanist_medium_500</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:background">@drawable/box_blue_corner_148</item>
        <item name="android:foreground">@drawable/ripple_box_corner_148</item>
    </style>

    <style name="ButtonLargeGrayStyle" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/urbanist_medium_500</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:background">@drawable/box_gray_corner_188</item>
        <item name="android:foreground">@drawable/ripple_box_corner_188</item>
    </style>

    <style name="ButtonMediumGrayStyle" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/urbanist_medium_500</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:background">@drawable/box_gray_corner_148</item>
        <item name="android:foreground">@drawable/ripple_box_corner_148</item>
    </style>

    <style name="ButtonSmallGrayStyle" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_52sdp</item>
        <item name="android:fontFamily">@font/urbanist_semibold_600</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textWhiteTransparent50</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@drawable/bg_blackdimdark_outline_graydim_corner_14</item>
        <item name="android:foreground">@drawable/ripple_box_corner_14</item>
    </style>

    <style name="ButtonSmallBlueStyle" parent="ButtonSmallGrayStyle">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:background">@drawable/box_dark_brownish_red_corner_14</item>
        <item name="android:foreground">@drawable/ripple_box_corner_14</item>
    </style>

    <!-- For TextViews -->
    <style name="TextMediumTitleStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/urbanist_medium_500</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Edit Text  -->
    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_height">@dimen/_52sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textColorHint">@color/textGrayMedium</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">@dimen/_11ssp</item>

    </style>

    <!--    Dialogs    -->
    <style name="BaseDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:fontFamily">@font/urbanist_regular_400</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="DialogCenterAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogCenterStyle" parent="BaseDialogStyle">
        <item name="android:windowAnimationStyle">@style/DialogCenterAnimation</item>
    </style>

    <!--For SwitchViews-->
    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/urbanist_regular_400</item>
    </style>

    <style name="Video_No_Title" parent="Theme.AppCompat.Light" >
        <item name="android:windowNoTitle">true</item>   <!-- //this -->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
