<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_106sdp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_13sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_3sdp">
    <!-- android:foreground="@drawable/ripple_box_corner_7"-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_104sdp"
        android:layout_height="@dimen/_51sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/box_black_dim_corner_7"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="AUDIO TRAINING" />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/textBlue"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="30 minutes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvNew"
        android:visibility="visible"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/bg_dark_red_circle"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>