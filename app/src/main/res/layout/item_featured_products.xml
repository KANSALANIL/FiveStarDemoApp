<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:ignore="UnusedAttribute">
<!--    android:foreground="@drawable/ripple_box_top_corner_10"
-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivFeaturedProduct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        tools:src="@drawable/img2"
        android:foreground="@drawable/bg_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_14sdp" />

    <ProgressBar
        android:id="@+id/pbViewPager"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/ivFeaturedProduct"
        app:layout_constraintEnd_toEndOf="@+id/ivFeaturedProduct"
        app:layout_constraintStart_toStartOf="@+id/ivFeaturedProduct"
        app:layout_constraintTop_toTopOf="@+id/ivFeaturedProduct"
        tools:ignore="UnusedAttribute" />


</androidx.constraintlayout.widget.ConstraintLayout>