<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/_3sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBookmarkItem"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_88sdp"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardBackgroundColor="@color/grayDarker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivBookmarkImageItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_pdf"/>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pbBookmarkItem"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="@dimen/_4sdp"
        android:indeterminateTint="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="@+id/cvBookmarkItem"
        app:layout_constraintEnd_toEndOf="@+id/cvBookmarkItem"
        app:layout_constraintStart_toStartOf="@+id/cvBookmarkItem"
        app:layout_constraintTop_toTopOf="@+id/cvBookmarkItem" />

</androidx.constraintlayout.widget.ConstraintLayout>